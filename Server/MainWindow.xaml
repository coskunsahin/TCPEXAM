<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="260"
                 Margin="10,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="775"
                 HorizontalContentAlignment="Left" Text="{Binding MsgBox}"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="68"
                 Margin="15,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="660" HorizontalContentAlignment="Left"
                 Text="{Binding Str}"/>
        <Button x:Name="button1" Content="Send" HorizontalAlignment="Left"
                Margin="699,325,0,0" VerticalAlignment="Top" Width="86" Height="68"
                Command="{Binding SendCommand}"/>

    </Grid>
</Window>
